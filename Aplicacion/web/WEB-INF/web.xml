<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registro</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.Registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Redirect</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.Redirect</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMateria</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.admin.AddMateria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cargarMaterias</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.admin.cargarMaterias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProfesor</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.admin.AddProfesor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cargarProfesores</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.admin.cargarProfesores</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddAlumno</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.admin.AddAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cargarAlumnos</servlet-name>
        <servlet-class>com.ipn.mx.controller.servlets.admin.cargarAlumnos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registro</servlet-name>
        <url-pattern>/Registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Redirect</servlet-name>
        <url-pattern>/Redirect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMateria</servlet-name>
        <url-pattern>/AddMateria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cargarMaterias</servlet-name>
        <url-pattern>/cargarMaterias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProfesor</servlet-name>
        <url-pattern>/AddProfesor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cargarProfesores</servlet-name>
        <url-pattern>/cargarProfesores</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddAlumno</servlet-name>
        <url-pattern>/AddAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cargarAlumnos</servlet-name>
        <url-pattern>/cargarAlumnos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
